<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/albumCardWidth"
    android:layout_height="@dimen/albumCardHeight"
    android:layout_gravity="center"
    android:layout_margin="@dimen/cardMargin"
    android:padding="@dimen/cardMargin"
    cardView:cardCornerRadius="@dimen/cornerRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/albumCoverImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/albumCoverImageHeight"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/albumCoverImage"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_12">

            <TextView
                android:id="@+id/albumName_text_view"
                style="@style/LargeTextView"
                tools:text="@string/AlbumName" />

            <TextView
                android:id="@+id/artistName_text_view"
                style="@style/SmallTextView"
                tools:text="@string/ArtistName" />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>