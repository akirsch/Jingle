<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.android.jingle.AlbumsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/small_album_cover_view"
            android:layout_width="@dimen/smallAlbumCoverDimen"
            android:layout_height="@dimen/smallAlbumCoverDimen"
            android:layout_margin="@dimen/dp_8"
            android:contentDescription="@string/albumCoverPic"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songListSongName"
                style="@style/LargeTextView"
                tools:text="@string/SongName" />

            <TextView
                android:id="@+id/songListArtistName"
                style="@style/SmallTextView"
                tools:text="@string/AlbumName" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>